<h1>Edit Person</h1>
<%= form_for @page do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :age %>
    <%= f.text_field :age %>
  </div>
  <div>
    <%= f.label :hair_color %>
    <%= f.text_field :hair_color %>
  </div>
  <div>
    <%= f.label :eye_color %>
    <%= f.text_field :eye_color %>
  </div>
  <div>
    <%= f.label :gender %>
    <%= f.text_field :gender %>
  </div>  
  <div>
    <%= f.label :alive %>
    <%= f.text_field :alive %>
  </div>


  <%= f.submit %>
<% end %>
